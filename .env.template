# Database - You need to set up PostgreSQL first
DATABASE_URL="postgresql://user:password@localhost:5432/imagehoster"

# NextAuth - Generate a secret with: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# Google OAuth (optional - leave blank if not using)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Stripe - Get these from stripe.com dashboard
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"
STRIPE_PRICE_ID="price_your_price_id"

# Storage Settings
STORAGE_TYPE="local"
UPLOAD_DIR="./public/uploads"

# AWS S3 (optional - for cloud storage)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET=""

# Storage Limits
FREE_STORAGE_LIMIT_MB=500
PREMIUM_STORAGE_LIMIT_MB=25600
FREE_MAX_FILE_SIZE_MB=5
PREMIUM_MAX_FILE_SIZE_MB=100
